<table class='table'>
  <% if users.empty? %>
    <p>ユーザーはいません</p>
  <% else %>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td><%= "フォロー数：#{user.followers.count}" %></td>
          <td><%= "フォロワー数：#{user.followeds.count}" %></td>
          <td><%= "フォローする／しない" %></td>
          <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>