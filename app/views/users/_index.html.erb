<table class='table'>
  <% if users.empty? %>
    <p>ユーザーはいません</p>
  <% else %>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td><%= "フォロー数：#{user.followers.count}" %></td>
          <td><%= "フォロワー数：#{user.followeds.count}" %></td>
          <td>
            <% if user == current_user %>
              <!--何も-->
            <% elsif user.already_followed_by?(current_user) %>
              <%= link_to "フォローを外す",user_relationship_path(user.id),method: :delete %>
            <% else %>
              <%= link_to "フォローする",user_relationship_path(user.id),method: :post %>
            <% end %>
          </td>
          <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>